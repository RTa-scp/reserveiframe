body {
  text-align: center;
  margin: 0 !important;
  padding: 0 !important;
  overflow-y: hidden;
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 14px;
  color: #330;
}
h1 {
  color: #901;
  font-weight: bold;
  font-size: 130%;
}
a {
  color: #b01;
}
blockquote {
  display: none;
}
@media (max-width: 479px) {
  #page-content {
    font-size: 0.9em;
  }
}